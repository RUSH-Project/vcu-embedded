{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach debugger",
            "type": "cortex-debug",
            "request": "attach",
            "servertype": "openocd",
            "runToEntryPoint": "main",
            "executable": "${workspaceRoot}/${config:DEVICE_NAME}/build/${config:DEVICE_NAME}.elf",
            "svdPath": "${workspaceRoot}/${config:DEVICE_NAME}/tools/openocd/${config:SVD_FILE}.svd",
            "cwd": "${workspaceRoot}",
            "configFiles": [
                "${workspaceRoot}/${config:DEVICE_NAME}/tools/openocd/${config:OPENOCD_CONFIG}"
            ],
            "showDevDebugOutput": "vscode"
        },
        {
            "name": "build, flash debug",
            "type": "cortex-debug",
            "request": "launch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/${config:DEVICE_NAME}/build/${config:DEVICE_NAME}.elf",
            "servertype": "openocd",
            "runToEntryPoint": "main",
            "preLaunchTask": "build, flash target",
            "svdPath": "${workspaceRoot}/${config:DEVICE_NAME}/tools/openocd/${config:SVD_FILE}.svd",
            "configFiles": [
                "${workspaceRoot}/${config:DEVICE_NAME}/tools/openocd/${config:OPENOCD_CONFIG}"
            ],
            "showDevDebugOutput": "vscode"
        }
    ]
}
